{
  "type": "json_schema",
  "json_schema": {
    "name": "module_6_GenerateProductTypeTaxonomy_output",
    "strict": true,
    "schema": {
      "type": "object",
      "properties": {
        "taxonomy": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "level": {
                "type": "integer",
                "description": "Hierarchy level: 1=most specific, 2=broader, 3=broadest"
              },
              "product_type": {
                "type": "string",
                "description": "Product type name at this level"
              },
              "rank": {
                "type": "integer",
                "description": "Relevance rank (1=primary, 2=alternative)"
              }
            },
            "required": ["level", "product_type", "rank"],
            "additionalProperties": false
          },
          "minItems": 1,
          "maxItems": 3,
          "description": "Short taxonomy from specific to general (1-3 entries max)"
        }
      },
      "required": ["taxonomy"],
      "additionalProperties": false
    }
  }
}
